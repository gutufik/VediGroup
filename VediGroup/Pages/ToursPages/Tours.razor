@page "/tours"
@attribute [Authorize]
@inject IModalService ModalService
@inject NavigationManager NavigationManager


<div class="card m-3 table-briefs border-0">
    <div class="card-body m-2">
        <div class="row mb-2">
            <div class="col">
                <h3 class="font-weight-bold">Туры</h3>
            </div>
            <div class="col">
                <button class="btn btn-primary float-end" @onclick=@(NewBriefClick)>
                    Добавить тур
                </button>
            </div>
        </div>
        <table class="tours-table">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Страна</th>
                    <th>Город</th>
                    <th>Виза</th>
                    <th>Стоимость</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="font-weight-bold">
                @foreach (var tour in ToursList)
                {
                    <tr @onclick="@(() => OnRowClick(tour))">
                        <td>@tour.Name</td>
                        <td>@tour.Hotel?.City.Country.Name</td>
                        <td>@tour.Hotel?.City.Name</td>
                        <td>@(tour.IsVisaNeeded? "Нужна": "Не нужна")</td>
                        <td>@tour.Price</td>
                        <td><button class="btn btn-danger">Удалить</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@code {
    public List<Tour> ToursList = DataAccess.GetTours();

    public void NewBriefClick()
    {
        NavigationManager.NavigateTo("/tours/new");
    }

    public void OnRowClick(Tour tour)
    {
        var parameters = new ModalParameters()
        .Add(nameof(TourModal.Tour), tour);
        ModalService.Show<TourModal>("Тур", parameters);
    }

}
