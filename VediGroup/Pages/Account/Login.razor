@page "/login"
@inherits LoginModel

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Вход</h1>

        <EditForm Model="@ViewModel" OnValidSubmit="LoginAsync">
            <DataAnnotationsValidator/>
            <ValidationSummary/>
            <p>
                <label>@ErrorMessage</label>
            </p>

            <label for="username">Логин</label>
            <InputText id="username" @bind-Value="@ViewModel.Username" class="form-control"/>
            
            <label for="password">Пароль</label>
            <InputText id="password" @bind-Value="@ViewModel.Password" class="form-control" type="password" />

            <p class="my-4">
                <button type="submit" class="btn btn-primary">Войти</button>
            </p>
        </EditForm>


    </div>
</div>


